#:kivy 1.0.9

<StartWind>: 
    canvas:
        Color: 
            #rgba: (0/255, 0/255, 0/255, 1) #(0,0,50 = navy)
            rgba: (38/255, 70/255, 80/255, 1) 
        Rectangle:
            #source: "logo.png"
            pos: self.pos
            size: self.size

    BoxLayout:
        id: start_menu
        orientation: 'vertical'
        size: (root.size[0] * 1.0, root.size[1] * 1.0)
        pos: (root.pos[0] , root.pos[1])
        #size: root.width * 1.0, root.height * 1.0
        #x: root.x
        #top: self.height and root.y + root.height * 1.0
        #cols: 4
        padding: 1
        spacing: 1
        
        #Label:
        Button:
            #text: "Sous Chef"
            #size_hint_y: 0.6
            background_normal: "ui/logo-crop.png"
            background_down: "ui/logo-crop.png"
            value: "logo"
            #background: "logo.png"
            
        Button:
            #text: 'Start'
            #size_hint_y: 0.4
            
            id: start_button
            value: "Start"
            background_normal: "ui/start.png"
            background_down: "ui/start_down.png"

     

<ChooseDone>:
    title: "How would you like your burgers cooked?"
    
    #content:'popup'
    GridLayout:
        cols: 2
        canvas:
            Color: 
                #rgba: (0/255, 0/255, 0/255, 1) 
                rgba: (38/255, 70/255, 80/255, 1)
            Rectangle:
                #source: "logo.png"
                pos: self.pos
                size: self.size


        GridLayout:
            size_hint_x: 0.75
            id: button_grid
            cols: 1
            padding: 0
            spacing: 0
            size: (root.size[0], root.size[1])
            pos: (root.pos[0], root.pos[1])
            Button:
                id: Rare
                value: "Rare"
                #text: "Rare"
                background_normal: "ui/rare_butt.png"
                background_down: "ui/rare_butt_down.png"
            Button:
                id: Medium
                value: "Med"
                #text: "Medium"
                #on_release: callback
                background_normal: "ui/med_butt.png"
                background_down: "ui/med_butt_down.png"
            Button:
                id: Well_done
                value: "Well"
                #text: "Well done"
                background_normal: "ui/well_butt.png"
                background_down: "ui/well_butt_down.png"
        
        FloatLayout:
            size_hint_x: 0.25
            Button:   
                id: exit
                value: "exit"
                #text: "exit"
                pos_hint: {'right':1, 'top':1.0}
                size_hint:(1.0,0.15)
                background_normal: "ui/exit.png"
                background_down: "ui/exit_down.png"  
                on_release: root.dismiss()

