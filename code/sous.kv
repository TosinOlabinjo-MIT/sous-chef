#:kivy 1.0.9

<StartWind>: 
    canvas:
        Color: 
            rgba: (0/255, 0/255, 50/255, 1) 
        Rectangle:
            #source: "logo.png"
            pos: self.pos
            size: self.size

    BoxLayout:
        id: start_menu
        orientation: 'vertical'
        size: (root.size[0] * 1.0, root.size[1] * 1.0)
        pos: (root.pos[0] , root.pos[1])
        #size: root.width * 1.0, root.height * 1.0
        #x: root.x
        #top: self.height and root.y + root.height * 1.0
        #cols: 4
        padding: 20
        spacing: 10
        
        #Label:
        Button:
            #text: "Sous Chef"
            size_hint_y: 0.75
            background_normal: "logo.png"
            background_down: "logo.png"
            value: "logo"
            #background: "logo.png"
            
        Button:
            text: 'Start'
            size_hint_y: 0.25
            id: start_button
            value: "Start"

     

<ChooseDone>:
    title: "pick desired doneness"
    #content:'popup'
    FloatLayout:
